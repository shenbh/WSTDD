<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical" >

    <include layout="@layout/head" />

    <ScrollView style="@style/layout_mm_style" >

        <LinearLayout
            style="@style/layout_mm_style"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/relativelayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/headimg_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:src="@drawable/about_headimg" />

                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/headimg_iv"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="我是团大大V1.0"
                    android:textColor="@color/textgray"
                    android:textSize="14sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linearlayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <include layout="@layout/line_nopadding" />

                <LinearLayout
                    android:id="@+id/protocol_ll"
                    style="@style/layout_mW_50H_style"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:clickable="true"
                    android:paddingLeft="15dip"
                    android:paddingRight="0dip" >

                    <TextView
                        style="@style/layout_about_style"
                        android:layout_weight="0.8"
                        android:paddingLeft="10dip"
                        android:paddingRight="0dip"
                        android:text="服务协议"
                        android:textColor="@color/textgray"
                        android:textSize="14sp" />

                    <ImageView
                        style="@style/layout_image_style"
                        android:layout_height="30dip"
                        android:layout_marginRight="15dip"
                        android:layout_weight="0.1"
                        android:gravity="center"
                        android:src="@drawable/setting_rightexpand" />
                </LinearLayout>

                <include layout="@layout/line_nopadding" />

                <LinearLayout
                    android:id="@+id/officialstation_ll"
                    style="@style/layout_mW_50H_style"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:clickable="true"
                    android:paddingLeft="15dip"
                    android:paddingRight="0dip" >

                    <TextView
                        style="@style/layout_about_style"
                        android:layout_weight="0.8"
                        android:paddingLeft="10dip"
                        android:paddingRight="0dip"
                        android:text="官方网站"
                        android:textColor="@color/textgray"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/officialstation_tv"
                        style="@style/layout_wm_style"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="20dip"
                        android:gravity="center_vertical"
                        android:text="www.wstdd.com.cn"
                        android:textColor="@color/lightgray"
                        android:textSize="14sp" />
                </LinearLayout>

                <include layout="@layout/line_nopadding" />

                <LinearLayout
                    style="@style/layout_mW_50H_style"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:clickable="true"
                    android:paddingLeft="15dip"
                    android:paddingRight="0dip" >

                    <LinearLayout
                        android:id="@+id/weixin_ll"
                        style="@style/layout_about_style"
                        android:layout_weight="0.8"
                        android:paddingLeft="10dip"
                        android:paddingRight="0dip" >

                        <TextView
                            style="@style/layout_wm_style"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="微信号"
                            android:textColor="@color/textgray"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/weixin_tv"
                            style="@style/layout_wm_style"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="woshituandada"
                            android:textColor="@color/lightgray"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <ImageView
                        style="@style/layout_image_style"
                        android:layout_height="30dip"
                        android:layout_marginRight="15dip"
                        android:layout_weight="0.1"
                        android:gravity="center"
                        android:src="@drawable/about_code" />
                </LinearLayout>

                <include layout="@layout/line_nopadding" />

                <LinearLayout
                    android:id="@+id/weibo_ll"
                    style="@style/layout_mW_50H_style"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:clickable="true"
                    android:paddingLeft="15dip"
                    android:paddingRight="0dip" >

                    <TextView
                        style="@style/layout_about_style"
                        android:layout_weight="0.8"
                        android:paddingLeft="10dip"
                        android:paddingRight="0dip"
                        android:text="新浪微博"
                        android:textColor="@color/textgray"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/weibo_tv"
                        style="@style/layout_wm_style"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="20dip"
                        android:gravity="center_vertical"
                        android:text="@string/mine_setting_about_aite"
                        android:textColor="@color/lightgray"
                        android:textSize="14sp" />
                </LinearLayout>

                <include layout="@layout/line_nopadding" />

                <LinearLayout
                    style="@style/layout_mW_50H_style"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:clickable="true"
                    android:paddingLeft="15dip"
                    android:paddingRight="0dip" >

                    <LinearLayout
                        android:id="@+id/versions_ll"
                        style="@style/layout_about_style"
                        android:layout_weight="0.8"
                        android:paddingLeft="10dip"
                        android:paddingRight="0dip" >

                        <TextView
                            style="@style/layout_wm_style"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="版本更新"
                            android:textColor="@color/textgray"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/versions_tv"
                            style="@style/layout_wm_style"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="当前版本v1.0"
                            android:textColor="@color/lightgray"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <ImageView
                        style="@style/layout_image_style"
                        android:layout_height="30dip"
                        android:layout_marginRight="15dip"
                        android:layout_weight="0.1"
                        android:gravity="center"
                        android:src="@drawable/setting_rightexpand" />
                </LinearLayout>

                <include layout="@layout/line_nopadding" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relativelayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="50dp"
                    android:gravity="center"
                    android:text="我是团大大 版权所有"
                    android:textColor="@color/lightgray"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>