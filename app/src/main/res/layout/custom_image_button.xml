<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_image_button_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical" >

    <LinearLayout
        style="@style/layout_mw_style"
        android:background="@color/bg_gray"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/registration_edit_listview_item_toprl1"
            style="@style/layout_mw_style"
            android:background="@color/text_red"
            android:orientation="horizontal"
            android:paddingBottom="10dip"
            android:paddingTop="10dip" >

            <TextView
                android:id="@+id/registration_edit_sxtop_name"
                style="@style/layout_ww_style"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"
                android:text="林多多"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/registration_edit_sxtop_phone"
                style="@style/layout_ww_style"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"
                android:layout_toRightOf="@id/registration_edit_sxtop_name"
                android:inputType="phone"
                android:text="18750736798"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/registration_edit_sxtop_delete"
                style="@style/layout_ww_style"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dip"
                android:background="@drawable/text_rectangle_whiteboder_style"
                android:text="删除"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/registration_edit_listview_item_toprl2"
            style="@style/layout_mw_style"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                style="@style/layout_ww_style"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dip"
                android:paddingBottom="10dip"
                android:paddingTop="17dip"
                android:text="编辑信息"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/registration_edit_sxtop_edit"
                style="@style/layout_ww_style"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dip"
                android:paddingBottom="10dip"
                android:paddingTop="17dip"
                android:text="完成"
                android:textSize="14sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/registration_edit_listview_item_childll1"
            style="@style/layout_mW_44H_style"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="20dip" >

            <TextView
                android:id="@+id/registration_item_child_textview"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:clickable="true"
                android:gravity="center_vertical"
                android:text="姓名"
                android:textSize="14sp" />

            <EditText  android:textColorHint="@color/hint_textview"
                android:id="@+id/registration_item_child_editext"
                style="@style/layout_mW_44H_style"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dip"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:text="rrrr"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>