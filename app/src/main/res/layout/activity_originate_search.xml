<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!-- 发起/搜索 -->

    <RelativeLayout
        android:id="@+id/fragment1"
        style="@style/layout_mw_style"
        android:layout_margin="5dip"
        android:background="@color/transparent">

        <EditText
            android:textColorHint="@color/hint_textview"
            android:id="@+id/originate_search_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="55dip"
            android:background="#EEEEF3F8"
            android:gravity="center_vertical"
            android:hint="@string/originate_search_edttext"
            android:paddingBottom="10dip"
            android:paddingLeft="30dip"
            android:paddingTop="10dip"
            android:singleLine="true"
            android:textColor="@color/textgray"
            android:textSize="15sp"></EditText>

        <ImageView
            android:id="@+id/originagte_search_iv"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:src="@drawable/originate_search" />

        <TextView
            android:id="@+id/originate_search_tv"
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="搜索"
            android:textColor="@color/text_red"
            android:textSize="14sp" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/search_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fragment1"
        android:layout_marginTop="10dip"></FrameLayout>

</RelativeLayout>