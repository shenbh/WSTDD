<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:peng="http://schemas.android.com/apk/res/com.newland.wstdd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        style="@style/layout_mw_style"
        android:orientation="horizontal" >

        <LinearLayout
            style="@style/layout_mm_style"
            android:layout_weight="2" >

            <ImageView
                android:id="@+id/bussiness_list_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_business_item3" />
        </LinearLayout>

        <LinearLayout
            style="@style/layout_mm_style"
            android:layout_weight="1"
            android:orientation="vertical" >

            <com.newland.wstdd.common.widget.PengTextView
                    android:id="@+id/bussiness_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:text="融资中国2015互联网金融峰会"
                    android:textSize="12sp"
                    peng:peng_drawableLeft="@drawable/button_press"
                    peng:peng_drawableLeftHeight="10dip"
                    peng:peng_drawableLeftWith="10dip" />

            <com.newland.wstdd.common.widget.PengTextView
                    android:id="@+id/bussiness_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:text="周五   09/27 08:30"
                    android:textSize="12sp"
                    peng:peng_drawableLeft="@drawable/button_press"
                    peng:peng_drawableLeftHeight="10dip"
                    peng:peng_drawableLeftWith="10dip" />

            <com.newland.wstdd.common.widget.PengTextView
                    android:id="@+id/bussiness_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:text="广东省深圳市"
                    android:textSize="12sp"
                    peng:peng_drawableLeft="@drawable/button_press"
                    peng:peng_drawableLeftHeight="10dip"
                    peng:peng_drawableLeftWith="10dip" />

            <RelativeLayout
                style="@style/layout_mm_style"
                android:layout_weight="1" >

                <com.newland.wstdd.common.widget.PengTextView
                    android:id="@+id/bussiness_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:text="336名"
                    android:textSize="12sp"
                    peng:peng_drawableLeft="@drawable/button_press"
                    peng:peng_drawableLeftHeight="10dip"
                    peng:peng_drawableLeftWith="10dip" />

                <TextView android:textSize="14sp"
                    android:id="@+id/bussiness_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="收费" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>