<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll"
        style="@style/layout_mm_style"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <FrameLayout
            style="@style/layout_mm_style"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/find_hot_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/defaultheadimg" />

            <TextView
                android:id="@+id/find_hot_logoname_tv"
                style="@style/layout_ww_style"
                android:layout_margin="10dip"
                android:background="@drawable/textview_radius_shap"
                android:padding="2dip"
                android:text="讲座"
                android:textColor="@color/gray"
                android:textSize="14sp" />
        </FrameLayout>

        <LinearLayout
            style="@style/layout_mm_style"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/find_hot_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:drawablePadding="5dip"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:paddingLeft="5dip"
                android:singleLine="true"
                android:text="融资中国2015互联网金融峰会"
                android:textColor="@color/textgray"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/find_hot_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:drawableLeft="@drawable/time"
                android:drawablePadding="5dip"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:paddingLeft="5dip"
                android:singleLine="true"
                android:text="周五   09/27 08:30"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/find_hot_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/location"
                android:drawablePadding="5dip"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:paddingLeft="5dip"
                android:singleLine="true"
                android:text="广东省深圳市"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <RelativeLayout
                style="@style/layout_mw_style"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/find_hot_people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/persons"
                    android:drawablePadding="5dip"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:paddingLeft="5dip"
                    android:singleLine="true"
                    android:text="336"
                    android:textColor="@color/text_red"
                    android:textSize="10sp" />

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    style="@style/layout_ww_style"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:id="@+id/find_hot_ischarge"
                        android:layout_width="wrap_content"
                        android:layout_height="20dip"
                        android:text="收费"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/find_hot_signstate"
                        style="@style/layout_wW_20H_style"
                        android:gravity="center"
                        android:text=""
                        android:layout_marginRight="10dp"
                        android:textColor="@color/gray"
                        android:textSize="10sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/find_hot_people"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="报名"
                    android:textColor="@color/gray"
                    android:textSize="10sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>